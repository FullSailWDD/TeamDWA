@import 'jeet'

//color variables
dinoblue = #5B83C2
lightGreen = #A6CE3D
darkGreen = #6FBE44
darkPurple = #2C242F
darkGrey = #A5A1A1
lightGrey = #ABA7A7
rubricRounding = 5px

//custom stuff
::-webkit-scrollbar
    display none
    
::-webkit-input-placeholder
    color darkPurple
    
:-moz-placeholder
    color darkPurple
    
::-moz-placeholder
    color darkPurple
    
:-ms-input-placeholder
    color darkPurple
    
//fonts
@font-face
    font-family arialround
    src url("../fonts/arialround.ttf")
    
//main style
body, html
    height 100%
    color darkPurple
    background-color grey
    
.dashboard
    background-image url("../img/ui-background.png")
    background-repeat repeat
    min-height 1000px
    
.bg
    position fixed
    
.mobile-top
    top 0px
    left 165px

.mobile-right
    top 0px
    right 0px
    
.mobile-left
    top 0px
    left 0px

.bgtop
    top 0px
    right 248px
    @media screen and (min-width: 1px) and (max-width: 789px)
        display none
    @media screen and (min-width: 790px) and (max-width: 1149px)
        display initial
        font-size 24px
    @media screen and (min-width: 1150px) and (max-width: 1599px)
        display initial
    @media screen and (min-width: 1600px)
        display initial
    
.bgcorner
    top 0px
    right 0px
    @media screen and (min-width: 1px) and (max-width: 789px)
        display none
    @media screen and (min-width: 790px) and (max-width: 1149px)
        display initial
        font-size 24px
    @media screen and (min-width: 1150px) and (max-width: 1599px)
        display initial
    @media screen and (min-width: 1600px)
        display initial
    
.bgright
    top 270px
    right 0px
    @media screen and (min-width: 1px) and (max-width: 789px)
        display none
    @media screen and (min-width: 790px) and (max-width: 1149px)
        display initial
        font-size 24px
    @media screen and (min-width: 1150px) and (max-width: 1599px)
        display initial
    @media screen and (min-width: 1600px)
        display initial
    
.dashbody
    padding-top 179px
    padding-right 160px
    @media screen and (min-width: 1px) and (max-width: 789px)
        padding-right 0px
    
.header
    position fixed
    
.headerlogo
    top 16px
    left 15px
    z-index 2
    @media screen and (min-width: 1px) and (max-width: 789px)
        width 279px
        top 12px
        left 71px
    @media screen and (min-width: 790px) and (max-width: 1149px)
        width initial
    @media screen and (min-width: 1150px) and (max-width: 1599px)
        width initial
    @media screen and (min-width: 1600px)
        width initial
    
.logoutbutton
    position fixed
    top 10px
    right 15px
    font-family arialround
    font-size 24px
    cursor pointer
    
//logout button style
.logoutbutton:link
    color darkPurple
.logoutbutton:visited
    color darkPurple
.logoutbutton:hover
    color darkPurple
.logoutbutton:active
    color darkPurple
    
//search area
.dashsearchcontainer
    text-align center
    padding-top 35px
    padding-bottom 35px
    @media screen and (min-width: 1px) and (max-width: 789px)
        padding-top 0px
        width 70%
        margin -60px auto
        z-index 2
        
.dashsearch
    font-size 32px
    outline none
    background-color lightGrey
    border none
    padding 5px 20px
    color darkPurple
    @media screen and (min-width: 1px) and (max-width: 789px)
        display initial
        width 60%
        font-size 29px
    @media screen and (min-width: 790px) and (max-width: 1149px)
        display initial
        font-size 24px
    @media screen and (min-width: 1150px) and (max-width: 1599px)
        display initial
    @media screen and (min-width: 1600px)
        display initial
    
//results div
.dashresults
    @media screen and (min-width: 1px) and (max-width: 789px)
        display initial
        center(450px)
        margin-top 80px
        max-width 480px
    @media screen and (min-width: 790px) and (max-width: 1149px)
        display initial
        center(450px)
    @media screen and (min-width: 1150px) and (max-width: 1599px)
        display initial
        center(955px)
    @media screen and (min-width: 1600px)
        display initial
        center(1450px)
    
.dashresults li
    background-image url("../img/result-bg.png")
    height 129px
    width 450px
    padding-right 26px
    background-repeat no-repeat
    padding-bottom 26px
    float left
    @media screen and (min-width: 1px) and (max-width: 789px)
        background-image url("../img/mobile-result-bg.png")
        width 146px
        padding-right 12px
    
//##############
//RESULT STYLING
//##############

.degreeAbbr
    font-family arialround
    font-size 31px
    padding-top 12px
    padding-left 22px
    color darkPurple
    @media screen and (min-width: 1px) and (max-width: 789px)
        padding-top 14px
        padding-left 41px
    
.degreeName
    color darkPurple
    font-size 14px
    font-family arialround
    display inline-block
    vertical-align top
    display -moz-inline-box
    -moz-box-orient vertical
    zoom: 1
    padding-top 9px
    padding-left 13px
    *display inline
    @media screen and (min-width: 1px) and (max-width: 789px)
        display none

.courseAbbr
    font-family arialround
    font-size 31px
    padding-top 5px
    padding-left 22px
    color darkPurple
    padding-top 5px
    padding-left 23px
    @media screen and (min-width: 1px) and (max-width: 789px)
        padding-top 12px
        padding-left 40px
    
.courseName
    color darkPurple
    font-size 14px
    font-family arialround
    display inline-block
    vertical-align top
    display -moz-inline-box
    -moz-box-orient vertical
    zoom: 1
    padding-top 3px
    padding-left 17px
    *display inline
    @media screen and (min-width: 1px) and (max-width: 789px)
        display none
        
.rubricnumber
    font-family arialround
    font-size 31px
    padding-top 5px
    padding-left 22px
    color darkPurple
    padding-top 9px
    padding-left 46px
    position absolute
    @media screen and (min-width: 1px) and (max-width: 789px)
        padding-top 15px
        padding-left 32px

.rubric
    color darkPurple
    font-family arialround
    font-size 9px
    padding 15px 5px
    background-color dinoblue
    border-radius rubricRounding rubricRounding rubricRounding rubricRounding
    -moz-border-radius rubricRounding rubricRounding rubricRounding rubricRounding
    -webkit-border-radius rubricRounding rubricRounding rubricRounding rubricRounding
    float left
    margin-right 8px
    max-width 80px
    text-overflow ellipsis
    white-space nowrap
    overflow hidden
    
.rubric:nth-child(5)
    display none
    
.rubricholder
    padding-left 103px
    margin-top -3px
    @media screen and (min-width: 1px) and (max-width: 789px)
        display none
    
.addcontainer {
    width 0px
    padding-left 106px
}
    
.addrubric
	background-color red
    border-radius rubricRounding rubricRounding rubricRounding rubricRounding
    -moz-border-radius rubricRounding rubricRounding rubricRounding rubricRounding
    -webkit-border-radius rubricRounding rubricRounding rubricRounding rubricRounding
	display inline-block
	cursor pointer
	font-family arialround
	font-size 16px
	padding 0px 5px
    border none
    @media screen and (min-width: 1px) and (max-width: 789px)
        margin-top 17px
    
.dots
    margin-right 8px
    padding-left 3px
    
